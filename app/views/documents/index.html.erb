
<div class="container">
  <div class="row">
    <div class="col-4">
      <ul>
        <% @documents.each do |document| %>
        <li> <%= link_to "#{document.link.url}", documents_path(document_id: document.id) %> </li>
        <% end %>
      </ul>
    </div>

    <div class="col-8">
      <div class="uploader">
        <h1>Put a file</h1>
<%= simple_form_for @document do |f| %>
  <%= f.input :link %>
 <%= f.submit %>
<% end %>

<div id="my-created-dropzone"
     style="height: 100px; width: 100%; border: 2px solid rgba(0, 0, 0, 0.3)">
</div>

      </div>
<% if params[:document_id].present?  %>

<table class="table">
<thead class="thead-dark">
  <tr>
    <% @headers.each do |element| %>
    <td><%= element %></td>
    <% end %>
  </tr>
</thead>

<tbody>
  <% @arrayofhash.each do |thing| %>
<tr>
  <% thing.each do |key, value| %>
  <td><%= value %></td>
  <% end %>
</tr>
  <% end %>

</tbody>
</table>

<% end %>
</div>
</div>
</div>
