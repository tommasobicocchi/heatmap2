    <h1 class="project-title"> Projects </h1>
    <div class="under-square">
      <%= link_to "My projects", projects_path(Project.where(user_id: current_user.id), text: "My projects"), class: "font-size" %>
      <%= link_to "All projects", projects_path, class: "font-size" %>
      <%= link_to "New project", new_project_path, class: "font-size" %>
    </div>
    <div class="container-flex">
      <% @projects.each do |project| %>
      <% if current_user.id == project.user_id %>

      <div class="first-card-doc">
        <div class="first-component-card">
          <div class="second-component-card">
            <img src="<%= project.user.photo.url %>" alt="">
            <p class="username"> <%= current_user.email %></p>
          </div>

          <div class="user-card">
      <h2>
        <%=  link_to project.name,(project_documents_path(project.id)) %>
      </h2>
            <p><%= project.description %></p>
          </div>

          <div class="buttons-container">
            <div>
              <%=  link_to 'Edit', edit_project_path(project.id) , class: "button-edit" %>
            </div>
            <%#= link_to "Edit", edit_project_path(project) %>
            <%#= link_to "Delete", project_path(project), method: :delete %>
            <div class="">
              <%=  link_to 'Delete', projects_path(project_id: project.id) , method: :delete, class: "button-edit" %>
            </div>
            <i class="fas fa-circle fa-lg"></i>
          </div>
        </div>
      </div>

      <% else %>

      <div class="non-card-doc">

             <div class="none-user-card">
              <div class="none-component-card">
                <img src="<%= project.user.photo.url %>" alt="">

              </div>

               <p class="username"> <%= current_user.email %></p>

               <h4><%= project.name %></h4>
               <div class="mr-2 center space-between">

            <p><%= project.description %></p>
              <i class="fas fa-circle fa-lg"></i>
            </div>
          </div>

      </div>



      <% end %>

      <% end %>
</div>










