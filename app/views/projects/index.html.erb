    <h1 class="project-title"> Projects </h1>
    <div class="under-square">
      <%= link_to "My projects", projects_path(Project.where(user_id: current_user.id), text: "My projects"), class: "font-size" %>
      <%= link_to "All projects", projects_path, class: "font-size" %>
      <%= link_to "New project", new_project_path, class: "font-size" %>
    </div>
    <div class="container-flex">
      <% @projects.each do |project| %>
      <% if current_user.id == project.user_id %>

      <div class="first-card-doc">
      <%=  link_to (project_documents_path(project.id)) do  %>
        <div class="first-component-card">
          <div class="second-component-card">
            <%= image_tag "image33.png" %>
            <p class="username"> <%= current_user.email %></p>
          </div>
          <div class="user-card">
            <h1> <%= project.name %></h1>
            <p><%= project.description %></p>
          </div>
          <div class="buttons-container">
            <div class="button-edit">
              <%=  link_to 'Edit', edit_project_path(project.id) , class: "" %>
            </div>
            <%#= link_to "Edit", edit_project_path(project) %>
            <%#= link_to "Delete", project_path(project), method: :delete %>
            <div class="button-edit">
              <%=  link_to 'Delete', projects_path(project_id: project.id) , method: :delete, class: "" %>
            </div>
          </div>
        </div>
      <% end %>
      </div>

      <% else %>
      <div class="first-card-doc">
      <%=  link_to (project_charts_path(project.id)) do  %>
        <div class="first-component-card">
          <div class="second-component-card">
            <%= image_tag "image33.png" %>
            <p class="username"> <%= project.user.email %></p>
          </div>
          <div class="user-card">
            <h1> <%= project.name %></h1>
            <p><%= project.description %></p>
          </div>
          <div class="buttons-container">
            <div class="button-edit">
              <%=  link_to 'Edit', class: "" %>
            </div>
            <%#= link_to "Edit", edit_project_path(project) %>
            <%#= link_to "Delete", project_path(project), method: :delete %>
            <div class="button-edit">
              <%=  link_to 'Delete', method: :delete, class: "" %>
            </div>
          </div>
        </div>
      <% end %>
      </div>

      <% end %>

      <% end %>
</div>








