
<div class="all-container-all">
  <div class="container-of-form">
<h2 class="text-center py 10" style="color: white;">Log in to HeatMap</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="entire-form mx-auto" style="width: 600px; padding: 20px; margin: 20px">
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="btn-login-div" style="text-align: center;">

    <%= f.button :submit, "Log in", class: "btn-formm login-btn"  %>

</div>
<div>
  <h2 class="text-center py 10" style="color: white;">Don't have an account?</h2>
  <%= link_to "Sign up", new_user_registration_path, class: "btn-formm login-btn"  %>
</div>
<% end %>
</div>
</div>
</div>
</body>




