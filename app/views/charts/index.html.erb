<% @documents.each do |document| %>
<div class="row m-4">
  <div class="chart-container col-4">
    <% @charts.each  do |chart|%>
    <canvas data-controller="chart"
    data-chart-headers="<%= chart.data["headers"].to_json %>"
    data-chart-data="<%= chart.data["values"].to_json %>"
    data-chart-type="<%= chart.data["type"] %>"
    width="200" height="200">
    </canvas>
  </div>
  <div class="chart-container col-4 text-center">
    <h1>Key Message of the Analysis</h1>
    <p><%= chart.description %> </p>
    <% end %>
  </div>
  <% end %>
</div>
