<div class="navbar-heat">
  <div class="nav-sx">
    <%= link_to root_path do %>
    <%= image_tag "target(1).png" %>
    <% end %>
  </div>
  <div class="nav-dx">
    <div >
      <%= link_to "Logout", destroy_user_session_path%>
    </div>
    <div>
      <a href="#">Setting</a>
    </div>
  </div>
</div>
<div class="row m-4">
  <% @charts.each  do |chart|%>
    <div class="col-6">
      <canvas data-controller="chart"
              data-chart-headers="<%= chart.data["headers"].to_json %>"
              data-chart-data="<%= chart.data["values"].to_json %>"
              data-chart-type="<%= chart.data["type"] %>"
              width="200" height="200">
      </canvas>
    </div>
    <div class="col-4 chart-text">
      <h2>Key Message of the Analysis</h2>
      <p><%= chart.description %> </p>
    </div>
  <% end %>
</div>
