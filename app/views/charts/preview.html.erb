<div class="chart-container col-3" style=" justify-content: space-between; display: flex; height:20vh; width:40vw;">
  <canvas data-controller="chart"
  data-chart-headers="<%= @document.csv_headers.to_json %>"
  data-chart-data="<%= @document.csv_data.to_json %>"
  data-chart-type="<%= @chart_type %>"
  width="200" height="200">
  </canvas>
  <div class="row">
  <div class="large-4 large-centered columns">
    <%= simple_form_for([@project, @document, @chart]) do |f| %>
      <fieldset>
        <%= f.input :description, as: :text, :input_html => { :cols => 5, :rows => 10 } %>
        <%= f.submit "Submit", class: "button small radius" %>
      </fieldset>
    <% end %>
  </div>
</div>
</div>
