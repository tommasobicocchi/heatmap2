<%= simple_form_for([@document, @chart]) do |f| %>
    <%= hidden_field_tag :chart_type, @chart_type %>
    <%= hidden_field_tag :headers, @headers %>
    <%= hidden_field_tag :values, @values %>

  <div class="d-flex justify-content-center m-5">
   <div class="title-name">
      <h3> <%=  f.input :name, as: :string  %></h3>
    </div>
  </div>
  <div class="row p-5 justify-content-around w-100">
    <div class="chart-container col-5">
        <canvas data-controller="chart"
                data-chart-headers="<%= @headers.to_json %>"
                data-chart-data="<%= @values.to_json %>"
                data-chart-type="<%= @chart_type %>"
                width="200" height="200">
        </canvas>
    </div>
    <div class="col-5 text-center text-field-position">
      <fieldset>
        <%= f.input :description, as: :text, input_html: { cols: 5, rows: 8 } %>
        <%= f.submit "Save Chart", class: "btn btn-primary" %>
      </fieldset>
    </div>
  </div>
<% end %>
